<!-- Main Div Container -->
<div class="container">

<!-- Form Loan -->
<form id="loanForm" action="/loan" method="POST">
  <!-- Form Details  -->

  <!-- Left Side Div -->
  <div class="col-lg-8 col-lg-offset-2 well">
    <h1>Loan Page</h1>

    <div class="form-group">
      <label for="customerId">Customer Id:</label>
      <input type="text" class="form-control" id="customerId" name="customerId">
    </div>

    <div class="form-group">
      <label for="principalAmount">Principal Amount:</label>
      <input type="text" class="form-control" id="principalAmount" name="principalAmount">
    </div>

    <div class="form-group">
      <label for="intrest">Interest % / Year:</label>
      <input type="text" class="form-control" id="intrest" name="intrest">
    </div>

    <div class="form-group">
      <label for="months">Months :</label>
      <input type="text" class="form-control" id="months" name="months">
    </div>

    <div id="form-group">
      <label class="radio-inline"><input type="radio" name="loanOption" value="intrest">Interest</label>
      <label class="radio-inline"><input type="radio" name="loanOption" value="emi">Emi</label>
    </div>

    <button class="btn btn-default pull-right">Preview</button>    
</form>
</div>  

</div>

