<!--Partial of Head  -->
<% include ../partials/head %> 

<body>

    <!-- partials For NAV -->
<% include ../partials/nav %>

<div class="container well">
<form action="/loan/repay/principal" method="POST">
    <h2>Principal Collection :</h2><br><br> 
    <input type="text" id="loanId" name="loanId" value="<%= loan._id %>" hidden>
    
    <div class="form-group">
        <label for="principal">Principal Amount :</label>
        <input type="text" class="form-control" id="principal" name="principal" value="<%= loan.principal %>" disabled>
    </div>

    <div class="form-group">
        <label for="loan date">LOAN DATE :</label>
        <input type="text" class="form-control" id="date" name="date" value="<%= loan.createdDate %>" disabled>
    </div>

    <div class="form-group">
        <label for="principal">Final Principal Amount :</label>
        <input type="text" class="form-control" id="principalNew" name="principalNew" value="<%= loan.loanAmount %>" disabled>
    </div>

    <div class="form-group">
        <label for="principal amount">Principal Amount :</label>
        <input type="text" class="form-control" id="principalAmount" name="principalAmount" >
    </div>    

    <button type="submit" class="btn btn-primary">Pay Principal</button>
</form>
</div>

</body>