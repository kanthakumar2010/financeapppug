<div class="container ">
<form action="#" method="POST">

    <div class="form-group">
        <label for="customerId">Customer Id:</label>
        <input type="text" class="form-control" id="customerId" name="customerId">
    </div>

    <div class="form-group">
        <label for="principalAmount">Principal Amount:</label>
        <input type="text" class="form-control" id="principalAmount" name="principalAmount" value=< %=d etail.principalAmount %> >
    </div>
    
    <div class="form-group">
        <label for="intrest">Interest % / Year:</label>
        <input type="text" class="form-control" id="intrest" name="intrest" value=< %=d etail.intrest %>>
    </div>
    
    <div class="form-group">
        <label for="months">Months :</label>
        <input type="text" class="form-control" id="months" name="months" value=< %=d etail.months %>>
    </div>
    
    <div class="form-group">
        <label for="totalValue">Total Amount :</label>
        <input type="text" class="form-control" id="totalValue" name="totalValue">
    </div>
    
    <div class="form-group">
        <label for="intrestValue">Total Interest Paid :</label>
        <input type="text" class="form-control" id="intrestValue" name="intrestValue">
    </div>
      
  
      <button onclick="myFunction()" class="btn btn-default pull-right">Preview</button>  
</form>
</div>

<script>
    var principal = <%= detail.principalAmount %> ;
    var intrest = <%= detail.intrest %> ; 
    var months = <%= detail.months %>;
    
    //Calculation For Simple intrest 
    // var rt = (intrest/100) * (months/12) + 1;
    // var finalAmount = principal * rt ;
    // var intVal = finalAmount - principal;   


    // P = Principal
    // R = rate% per annum 
    // T = time
    // I = simple interest 
    // A = amount
    // Formula for calculating simple interest is S.I = (P × R × T)/100
    // Important: Formula for calculating amount is A = P + I
    
    var simpleIntrest = ( principal * intrest * ( months / 12)  ) / 100;
    var finalAmount = principal + simpleIntrest;

    document.getElementById("totalValue").value =  finalAmount.toFixed(2);
    document.getElementById("intrestValue").value =   simpleIntrest.toFixed(2) ;
    

</script>
