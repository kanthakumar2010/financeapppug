<script>
    var principal = <%= detail.principalAmount %> ;
    var intrest = <%= detail.intrest %> ; 
    var months = <%= detail.months %>;
    
    //Calculation For Simple intrest 
    // var rt = (intrest/100) * (months/12) + 1;
    // var finalAmount = principal * rt ;
    // var intVal = finalAmount - principal;   


    // P = Principal
    // R = rate% per annum 
    // T = time
    // I = simple interest 
    // A = amount
    // Formula for calculating simple interest is S.I = (P × R × T)/100
    // Important: Formula for calculating amount is A = P + I
    
    var simpleIntrest = ( principal * intrest * ( months / 12)  ) / 100;
    var finalAmount = principal + simpleIntrest;

    document.getElementById("totalValue").innerHTML =  finalAmount.toFixed(2);
    document.getElementById("intrestValue").innerHTML =   simpleIntrest.toFixed(2) ;
    

</script>
